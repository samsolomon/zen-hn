{
  "manifest_version": 3,
  "name": "Zen HN",
  "version": "0.1.0",
  "description": "Restyles Hacker News with custom CSS.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://news.ycombinator.com/*",
    "http://news.ycombinator.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://news.ycombinator.com/*",
        "http://news.ycombinator.com/*"
      ],
      "css": ["dist/styles.css"],
      "js": ["dist/logic.js", "dist/icons.js", "dist/content.js"],
      "run_at": "document_start"
    }
  ]
}
