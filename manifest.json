{
  "manifest_version": 3,
  "name": "Zen Hacker News",
  "version": "0.1.0",
  "description": "A calmer way to read Hacker News. Less noise, more focus.",
  "permissions": ["storage", "scripting"],
  "optional_host_permissions": ["https://*/*", "http://*/*"],
  "action": {
    "default_title": "Toggle Zen HN"
  },
  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },
  "host_permissions": [
    "https://news.ycombinator.com/*",
    "http://news.ycombinator.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://news.ycombinator.com/*",
        "http://news.ycombinator.com/*"
      ],
      "css": ["dist/colors.css", "dist/styles.css"],
      "js": [
        "dist/logic.js",
        "dist/icons.js",
        "dist/utils.js",
        "dist/pages.js",
        "dist/submissionMenu.js",
        "dist/random.js",
        "dist/commentCollapse.js",
        "dist/favorites.js",
        "dist/replyForm.js",
        "dist/sidebar.js",
        "dist/getOrCreateZenHnMain.js",
        "dist/restyleSubmissions.js",
        "dist/buildCommentItem.js",
        "dist/restyleFatItem.js",
        "dist/restyleComments.js",
        "dist/initRestyle.js",
        "dist/main.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["dist/fonts/*.woff2"],
      "matches": ["*://news.ycombinator.com/*"]
    }
  ]
}
